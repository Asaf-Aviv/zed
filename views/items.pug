            .col-xl-10.col-lg-9.col-md-9.col-sm-8
                .league-item-wrapper.d-flex.flex-wrap
                    each item in items.data
                        if (item.gold.purchasable && item.maps["11"])
                            .league-item(tags=item.tags.join(' '), data-price=item.gold.total, data-title=item.name.toLowerCase(), data-colloq=item.colloq)
                                a(tabindex="0", href="#", data-toggle="popover", data-trigger="manual", data-html="true", data-title=item.name, 
                                data-content=`<span><img src=/assets/league/img/item/${item.image.full}></span>${item.description}<br><br>
                                <div class=cost><span>Cost <yellow>${item.gold.total}</yellow>
                                </span><span>Sell <yellow>${item.gold.sell}</yellow></span></div>`)
                                    img.league-item(src=`//ddragon.leagueoflegends.com/cdn/8.7.1/img/item/${item.image.full}`)
        
